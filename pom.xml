  <build>
    <plugins>
      <plugin>
        <groupId>com.mycila</groupId>
        <artifactId>license-maven-plugin</artifactId>
        <version>${mvn.license.version}</version>
        <configuration>
          <strictCheck>true</strictCheck>
          <inlineHeader><![CDATA[
${organization.slogan}

